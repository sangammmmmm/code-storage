#include <vector>
using namespace std;

class Solution {
public:
    void rotate(vector<int>& arr, int d) {
        int n = arr.size();
        d = d % n;

        vector<int> temp(d);

        // Copy last d elements to temp
        for (int i = n - d; i < n; i++)
            temp[i - (n - d)] = arr[i];

        // Shift the rest
        for (int i = n - d - 1; i >= 0; i--)
            arr[i + d] = arr[i];

        // Copy temp to front
        for (int i = 0; i < d; i++)
            arr[i] = temp[i];
    }
};
